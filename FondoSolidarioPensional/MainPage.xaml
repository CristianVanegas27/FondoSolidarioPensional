<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FondoSolidarioPensional.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label Text="Ingrese el salario:"/>
            <Entry x:Name="EntrySalario" Placeholder="Ingrese Salario"/>
            <Button Text="Calcular" Clicked="Calcular_Clicked"/>
            <Label Text="Aporte Salud: "/>
            <Entry x:Name="EntryAsalud" IsEnabled="False"/>
            <Label Text="Aporte Pension: "/>
            <Entry x:Name="EntryApension" IsEnabled="False"/>
            <Label Text="FPS: "/>
            <Entry x:Name="EntryFps" IsEnabled="False"/>
            <Label Text="Salario Neto: "/>
            <Entry x:Name="EntrySneto" IsEnabled="False"/>
            
            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
